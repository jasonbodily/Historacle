<h4>Loaded Chronicles</h4>

<table id="index-library-chronicles" class="table table-index">
     <tr ng-repeat="(id, chronicle) in chronicles">
       <td><input type="checkbox"></td>
       <td>{{chronicle.name}}</td>
       <td><a href="#" ng-click="$parent.removeChronicle(chronicle.id)"><i class="icon-remove"></i></a></td>
     </tr>
</table>

<h4>My Chronicles</h4>

<%= form_tag index_for_viewer_chronicles_path, remote: true, id: "viewer-chronicles-search", class: "index-search" do %>
   <div class="input-add-on"><i class="icon-search"></i></div>
   <div class="input-field"><%= text_field_tag :search, params[:search], placeholder: "Search" %></div>
<% end %>

<div id="viewer-chronicles-index">
  <%= render 'chronicles/index_for_viewer' %>
</div>
