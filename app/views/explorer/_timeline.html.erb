<div id="timeline-pane">
  <div id="timeline-events">
    <svg class="timeline-event-group">
      <a class="timeline-event" ng-repeat="event in events" ng-click="selectEvent(event)">
        <circle svg-cx="{{getCx(event.start_date)}}" svg-cy="{{getCy(event.chronicle_id)}}" r="5" svg-fill="{{getFill(event.chronicle_id)}}" stroke="black" stroke-width="1"></circle>
      </a>
    </svg>
  </div>

  <div id="timeline-line">
    <div class="indicator" style="left:50%"><i class="icon-chevron-up"></i></div>
    <div class="minor-lines"></div>
    <div class="major-lines" ng-hide="isEmpty(events)">

      <div ng-repeat="mu in timeline.major_units" style="{{getOffset(mu)}}">
        <div class="major-line"></div>
        {{ mu | date:'dd-MM-yyyy'}}
      </div>

    </div>
  </div>
</div>

<style type="text/css">

   .indicator {
      position: absolute;
      text-align: center;
      margin-left: -10px;
      width: 20px;
   }

   #timeline-pane {
      position: absolute;
      left: 20px;
      right: 20px;
      bottom: 0;
      top: 0;
      color: #c6c6c6;
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      font-size: 12px;
   }

   #timeline-line {
      margin: 0 10px;
      position: absolute;
      top: 70px;
      left: 0;
      right: 0;
      bottom: 0;
   }

   .minor-lines {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 7px;
      background: url('/images/minor-line.png');
   }

   .major-lines {
      height: 10px;
   }

   .major-lines > div {
      text-align: center;
      position: absolute;
      width: 40px;
      margin-left: -20px;
   }

   .major-lines div:first-child {
      left: 0 !important;
   }

   .major-lines div:last-child {
      left: 100% !important;
   }

   .major-line {
      margin-bottom: 5px;
      height: 8px;
      width: 20px;
      border: solid #c6c6c6;
      border-width: 0 2px 0 0;
   }

   #timeline-events {
      height: 55%;
      width: 100%;
   }

   a.timeline-event {
      height: 10px;
      width: 10px;
      -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
   }

   a.timeline-event circle {
      -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
   }

   .timeline-event-group {
      position: absolute;
      padding: 0 10px;
      height: 100%;
      width: 100%;

      box-sizing: border-box;
      -moz-box-sizing: border-box;
      -webkit-box-sizing: border-box;
   }

</style>